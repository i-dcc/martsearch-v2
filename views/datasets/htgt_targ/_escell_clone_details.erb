<table>
  <thead>
    <tr>
      <th>ES Cell Clone ID</th>
      <th>ES Cell Strain</th>
      <th>ES Cell Line</th>
      <th>Allele</th>
      <th class="nobg noborder"></th>
    </tr>
  </thead>
  <tbody>
    <% clones.each do |clone| %>
      <tr>
        <td><a href="http://www.sanger.ac.uk/htgt/plate/view?plate_name=<%= clone["escell_clone_name"].slice(0, clone["escell_clone_name"].length - 4) %>"><%= clone["escell_clone_name"] %></a></td>
        <td>
          <% if clone["es_cell_line"].match("JM8") %>
            C57BL/6N
          <% elsif clone["es_cell_line"].match("C2") %>
            C57BL/6N
          <% elsif clone["es_cell_line"].match("AB2.2") %>
            129S7
          <% end %>
        </td>
        <td><%= clone["es_cell_line"] %></td>
        <td><%= clone["allele_name"] %></td>
        <td class="nobg noborder">
          <%= partial( "datasets/htgt_targ/order_button", :locals => { :project => project, :order_type => 'clone' } ) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>